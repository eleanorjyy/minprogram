}

.hot-title-group{
  display: flex;
  align-items: center;
  padding: 30rpx;
}
.hot-group{
  padding: 40rpx;
}

.hot-title{
    width: 100%;
    font-weight:bold;
    padding:30rpx 0 0 30rpx;
    height: 40rpx;
    color: #FF7685;
    text-align: left;
    letter-spacing: 10rpx;
}

.hot-logo{
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
}

.boxName{
  padding: 50rpx;
}
.hot-image-logo>image{
  padding-top: 30rpx;
  padding-left: 10rpx;
  width: 200rpx;
  height: 200rpx;
}

.boxImage{
  padding-top: 20rpx;
  padding-left: 10rpx;
  max-width: 300rpx;
