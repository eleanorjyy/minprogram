@import '../../common/common.wxss';

.orders-address{
    position: relative;
    padding: 5rpx 50rpx 20rpx 35rpx;
    font-size: 14px;
    line-height: 25px;
    border-bottom: 20rpx solid #ededed;
    color: #adadad;
}
.orders-address-header{
  display: flex;
  align-items: center;
  padding-top: 20rpx;
  padding-bottom: 10rpx;
  
}
.orders-address-icon{
  display: inline-block;
  height: 45rpx;
  width: 45rpx;
  /* padding-top: 20rpx; */
}

.orders-address-title{
  display: inline-block;
  padding-left: 20rpx;
   padding-top: 8rpx; 
  color: #a5895c;
  font-size: 25rpx;
}

.orders-address-container{
  padding-left: 63rpx;
}
.orders-address::after{
    position: absolute;
    right: 30rpx;
    top: 60rpx;
    content: '';
    width: 8px;
    height: 8px;
    border-top: 4rpx solid #7f7f7f;
    border-right: 4rpx solid #7f7f7f;
    -webkit-transform: rotate(45deg);
    transform: rotate(45deg);
}
.orders-address-name{
    /* display: inline-block; */
    width: 300rpx;
}

.orders-no-address{
    position: relative;
    height: 90rpx;
    line-height: 90rpx;
    color: #adadad;
    border-bottom: 20rpx solid #ededed;
    text-align: center;
}
.orders-no-address::after{
    position: absolute;
    right: 30rpx;
    top: 34rpx;
    content: '';
    width: 16rpx;
    height: 16rpx;
    border-top: 4rpx solid #7f7f7f;
    border-right: 4rpx solid #7f7f7f;
    -webkit-transform: rotate(45deg);
    transform: rotate(45deg);
}

.orders-box{
    padding-bottom: 105rpx;
}
.orders-list{
    position: relative;
    padding:20rpx 20rpx 20rpx 220rpx;
    height: 130rpx;
    border-bottom: 1rpx solid #ededed;
}
.orders-thumb{
    position: absolute;
    top: 20rpx;
    left: 20rpx;
    width: 120rpx;
    height: 120rpx;
}
.orders-list view{
    line-height: 60rpx;
}

.orders-fees{
    position: relative;
    padding: 20rpx 90rpx 20rpx 50rpx; 
    font-size: 14px;
    line-height: 20px;
    border-bottom: 20rpx solid #ededed;
    color: #adadad;
}

.orders-fees-money{
  float: right;
}


.orders-fees .orders-fees-pretax{
    display: inline-block;
    width: 490rpx;
    font-size: 25rpx;
    color: #a5895c;
    padding-left: 50rpx;
    box-sizing: border-box;
}

.orders-fees .orders-fees-shipping{
    display: inline-block;
    width: 490rpx;
    font-size: 25rpx;
    color: #a5895c;
    padding-left: 50rpx;
    box-sizing: border-box;
}

.orders-fees .orders-fees-tax{
    display: inline-block;
    width: 490rpx;
    font-size: 25rpx;
    color: #a5895c;
    padding-left: 50rpx;
    box-sizing: border-box;
}

.orders-footer{
    display: inline-block; 
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 80rpx;
    line-height: 8rpx;
    font-size: 14px;
    border-top: 1rpx solid #ededed;
}

.orders-footer-btn{
     /* display: inline-block;  */
    float: right;
    padding-top: 40rpx; 
    height: 80rpx;
    width: 240rpx;
    font-size: 15px;
    text-align: center;
    color: #fff;
    background: #AB956D;
}

.orders-footer-total-container{
  display: flex;
  /* float: left;  */
}
.orders-footer-total-text{
     /* display: inline-block;   */
     width: 310rpx; 
    padding-left: 30rpx;
    padding-top: 40rpx;
